<div class="container py-5">
  <h1><%= @list.name %></h1>

   <div class="bg-white rounded p-3 shadow">

       <% @list.movies.each do |movie| %>
      <li>
        <strong><%= movie.title %></strong> (<%= movie.rating %> / 10)
      </li>
    <% end %>
</div>

      <div class="rounded p-2 btn-flat flex-d">
        <%= link_to "Delete this list", list_path(@list), class: "btn", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
        <%= link_to "Back to lists", lists_path, class: 'btn'%>
        <%= link_to "add a new bookmark", new_list_bookmark_path(@list), class: "btn"%>
      </div>
